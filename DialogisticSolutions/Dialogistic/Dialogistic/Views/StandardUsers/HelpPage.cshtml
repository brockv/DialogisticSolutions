@{

    ViewBag.Title = "HelpPage";
}

<section class="content-header">
    <h2>
        Welcome Caller!
    </h2>
    <ol class="breadcrumb">
        <li><a href="~/Admins/Dashboard"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Help</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h2 class="box-title">general help and guidelines</h2>
        </div>

        <div>
            <h6>Description of options</h6>

            <p>
                <br />
                <a href="~/StandardUsers/ViewCallList"><i class="fa fa-address-card"></i> <span>View Call List:</span></a>
                <br />
                View the callers on your assigned call list. Clicking the call action will take you to a more
                detailed page pertaining to that caller with donation and call log options, the ability to fill out suggested updates on a constituent's
                informtion, and of course call the constitutent yourself!
            </p>

            <p>
                <br />
                <a href="~/Constituents/Index"><i class="fa fa-group"></i> <span>View Constituents:</span></a>
                <br />D
               Check the donation status of constitutents on your call list. Also, you can search for a particular constituent via the search box.
            </p>

            <p>
                <br />
                <a href="~/Manage/Index"><i class="fa fa-gears"></i> <span>Settings:</span></a>
                <br />
                Use this option to @Html.ActionLink("update account info", "UpdateUserProfile", "Manage"), which can include changing your avatar, color theme, etc., @Html.ActionLink("change your password", "ChangePassword", "Manage"), and
                @Html.ActionLink("view a report", "PentestingReport", "Home") on the site's security.
            </p>
        </div>
    </div>
</section>
